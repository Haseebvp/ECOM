<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    card_view:cardCornerRadius="@dimen/card_album_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/productImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_toRightOf="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left|top"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_5">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burberry Top"
                android:layout_marginLeft="@dimen/margin_5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Burberry hdgfh djfghdgf dgfhgdf djgfhgd fdjgfhdfdghfgd fhdghgf Top djhfj djhfd djhfjd fdjhfd djhfjdhf djhfhdhf"
                android:textColor="@color/text_common"
                android:textSize="@dimen/text_13"
                android:textStyle="normal" />

            <TextView
                android:layout_marginTop="@dimen/margin_5"
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/margin_5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2"
                android:layout_marginTop="@dimen/margin_5">

                <Button
                    android:id="@+id/buy"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30"
                    android:text="BUY"
                    android:textSize="@dimen/text_14"
                    android:background="@drawable/buy_button_bg"
                    android:textColor="@android:color/holo_red_dark"/>

                <Button
                    android:textSize="@dimen/text_14"
                    android:id="@+id/cart"
                    android:layout_margin="@dimen/margin_5"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_30"
                    android:text="CART"
                    android:background="@drawable/cart_button_bg"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>